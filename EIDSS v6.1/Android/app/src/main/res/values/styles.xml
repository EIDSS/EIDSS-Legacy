<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- Common layout styles. -->

    <style name="CommonLayout"  >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="UnderScrollLayout"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/Padding.M</item>
        <item name="android:paddingRight">@dimen/Padding.M</item>
    </style>


    <style name="CommonButton" parent="@android:style/TextAppearance.Widget.Button" >
        <item name="android:textSize">@dimen/CommonButton.TextSize</item>
        <item name="android:textColor">@color/CommonButton.TextColor</item>
        <item name="android:minHeight">@dimen/CommonButton.MinHeight</item>
    </style>

    <style name="CommonButton.Port"  >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommonButton.Land" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SpaceItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">@dimen/SpaceItemSize</item>
        <item name="android:layout_height">@dimen/SpaceItemSize</item>
    </style>

    <style name="ButtonSpaceItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">@dimen/SmallSpaceItemSize</item>
        <item name="android:layout_height">@dimen/SmallSpaceItemSize</item>
    </style>

    <style name="Separator" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/Separator.Background</item>
    </style>

    <style name="DropDownList" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/Menu.Separator.Background</item>
    </style>
    <!-- End of Common layout styles. -->

    <!-- Login styles. -->
    <!-- Login layout styles. -->
    <style name="CommonLayout.Login" >
        <item name="android:background">@color/CommonBackground</item>
    </style>

    <style name="LoginLayout"  >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginLayout.Port"  >
        <item name="android:layout_marginLeft">@dimen/LoginLayout.Margin</item>
        <item name="android:layout_marginRight">@dimen/LoginLayout.Margin</item>
    </style>

    <style name="LoginButtonLayout"  >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/CommonBackground</item>
    </style>
    <!-- END Login layout styles. -->

    <!-- Login control styles. -->
    <style name="LoginHeader" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/LoginHeader.TextColor</item>
        <item name="android:textSize">@dimen/LoginHeader.TextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/ApplicationName</item>
    </style>

    <style name="LoginDensity" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/RedTextColor</item>
        <item name="android:textSize">@dimen/InfoItem.TextSize</item>
