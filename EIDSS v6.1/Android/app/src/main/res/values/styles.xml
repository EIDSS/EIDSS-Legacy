        <item name="android:textColor">@color/LoginInput.TextColor</item>
        <item name="android:textColorHint">@color/LoginInput.TextColorHint</item>
    </style>

    <style name="LoginMessage" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/LoginMessage.TextColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/PasswordNotSet</item>
    </style>
    <!-- END Login control styles. -->
    <!-- END Login styles. -->


    <!-- Detail styles. -->
    <!-- Detail layout styles. -->
    <style name="DetailLayout" >
