    <style name="LoginFooter" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/Space</item>
    </style>

    <style name="LoginButton" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/LoginButton.Height</item>
        <item name="android:layout_marginRight">@dimen/LoginButton.Margin</item>
        <item name="android:layout_marginLeft">@dimen/LoginButton.Margin</item>
        <item name="android:layout_marginTop">@dimen/LoginButton.Margin</item>
        <item name="android:layout_marginBottom">@dimen/LoginButton.Margin</item>
        <item name="android:textSize">@dimen/LoginButton.TextSize</item>
        <item name="android:textColor">@color/LoginButton.TextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginPassword" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/LoginInput.Height</item>
        <item name="android:paddingLeft">@dimen/LoginInput.Padding</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/LoginInput.Background</item>
