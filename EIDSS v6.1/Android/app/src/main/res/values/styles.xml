        <item name="android:paddingRight">@dimen/DetailItem.Padding</item>
        <item name="android:background">@color/TransparentColor</item>
        <item name="android:tag">text</item>
    </style>

    <style name="DetailItem.Text.Root" >
        <item name="android:layout_width">fill_parent</item>
