    <!-- END Detail styles. -->

    <!-- List styles. -->
    <style name="ListItemLayout" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/ListLayout.MinHeight</item>
