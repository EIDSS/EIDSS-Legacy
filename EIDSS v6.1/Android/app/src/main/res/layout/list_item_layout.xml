<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/text1"
            style="@style/GettingStartedListCheckbox"
            android:nestedScrollingEnabled="false"
            android:layout_width="wrap_content"
            android:enabled="true"
            android:padding="0dp"
            android:layout_marginTop="@dimen/Padding.M">
        </CheckBox>

        <LinearLayout
                    android:id="@+id/Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
              <LinearLayout

                    style="@style/DetailLayout.Port"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    >
                <TextView
                    style="@style/DetailItem.Text"
                    android:id="@+id/CaseID"
                    />
                <TextView
                    style="@style/DetailItem.Header.Italic"
                    android:id="@+id/Status"
                    />
              </LinearLayout>
              <ImageView
                        android:id="@+id/ffSummaryIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/ic_action_next_item"
                      android:contentDescription="@drawable/ic_action_next_item">
              </ImageView>
            </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/Separator.GroupHeader"/>

</LinearLayout>