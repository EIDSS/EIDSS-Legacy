<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <LinearLayout
            style="@style/UnderScrollLayout">

            <!--section to paste begin-->
        
      <!--Page 0-->

<!--SpeciesType-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <TextView
        style="@style/DetailItem.Header"
          android:text="@string/Animal_idfsSpeciesType" />
    <Spinner
          android:id="@+id/idfsSpeciesType"
        style="@style/DetailItem.Spinner"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--AnimalCode-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <TextView
          style="@style/DetailItem.Header"
          android:text="@string/Animal_strAnimalCode" />
    <EditText
          android:id="@+id/strAnimalCode"
          style="@style/DetailItem.Text"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--ScanAnimalId-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <Button
      android:id="@+id/ScanAnimalIdButton"
      android:text="@string/ScanAnimalId"
    style="@style/CommonButton.Port" />
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--AnimalAge-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <TextView
        style="@style/DetailItem.Header"
          android:text="@string/Animal_idfsAnimalAge" />
    <Spinner
          android:id="@+id/idfsAnimalAge"
        style="@style/DetailItem.Spinner"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--AnimalGender-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <TextView
        style="@style/DetailItem.Header"
          android:text="@string/Animal_idfsAnimalGender" />
    <Spinner
          android:id="@+id/idfsAnimalGender"
        style="@style/DetailItem.Spinner"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--AnimalCondition-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <TextView
        style="@style/DetailItem.Header"
          android:text="@string/Animal_idfsAnimalCondition" />
    <Spinner
          android:id="@+id/idfsAnimalCondition"
        style="@style/DetailItem.Spinner"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>


        
            <!--section to paste end-->

            <LinearLayout
                    android:id="@+id/FFDetailsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
              <LinearLayout

                    style="@style/DetailLayout.Port"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    >
                <TextView
                    style="@style/DetailItem.Text"
                    android:id="@+id/ffSummaryTextCaption"
                    android:text="@string/ClinicalSigns" />
                <TextView
                    android:id="@+id/ffSummaryText"
                    style="@style/DetailItem.Header.Italic"
                    />
              </LinearLayout>
              <ImageView
                        android:id="@+id/ffSummaryIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@drawable/ic_action_next_item"
                      android:contentDescription="@drawable/ic_action_next_item">
              </ImageView>
            </LinearLayout>

        </LinearLayout>



</ScrollView>
