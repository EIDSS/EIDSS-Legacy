          android:text="@string/HumanCaseSample_strFieldBarcode" />
    <EditText
          android:id="@+id/strFieldBarcode"
          style="@style/DetailItem.Text"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--FieldCollectionDate-->
<LinearLayout
    style="@style/DetailLayout.Port">
