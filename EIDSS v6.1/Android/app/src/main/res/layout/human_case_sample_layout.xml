        style="@style/DetailItem.Header"
          android:text="@string/HumanCaseSample_idfsSampleType" />
    <Spinner
          android:id="@+id/idfsSampleType"
        style="@style/DetailItem.Spinner"/>
    <TextView
    style="@style/Separator"/>
</LinearLayout>

<!--FieldBarcode-->
<LinearLayout
    style="@style/DetailLayout.Port">
    <TextView
