<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/checkbox"

        android:layout_width="wrap_content"
        android:layout_height="@dimen/SpinnerItem.Height"
        android:background="@color/CommonBackground"
        />

    <TextView
        android:id="@+id/SelectOption"
        style="@style/CustomSpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SpinnerItem.Height"
        android:textColor="@color/SpinnerItem.TextColor"
        android:textSize="@dimen/SpinnerItem.TextSize"
        android:paddingLeft="@dimen/SpinnerItem.Padding"
        android:paddingRight="@dimen/SpinnerItem.Padding"  />
</LinearLayout>