<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_dark</item>
    </style>

    <!--style name="CustomSpinnerItem" >
        <item name="android:background">@drawable/custom_spinner_item_border</item>
    </style-->



    <style name="LoginButtonLayout"  >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/LightTextColor</item>
    </style>


    <style name="ButtonSpaceItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">@dimen/SmallSpaceItemSize</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>