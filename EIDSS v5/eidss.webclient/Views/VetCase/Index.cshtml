@using eidss.webclient.Utils
@using eidss.model.Schema
@using bv.model.Model.Core

@model eidss.model.Schema.VetCaseListItem.Accessor       

@{
    ViewBag.Title = Translator.GetMessageString("titleVeterinaryCaseList");
    ViewBag.FormCode = "V01";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="grid_selecteditem" />

<table class="listForm">
    <tr>
        <td class="lfSearchPanelTd">
            @if ((Model as bv.model.Model.Core.IObjectMeta).SearchPanelMeta != null)
            {        
            <div id="searchpanel" class="customSearchPanel">
                @using (Html.BeginForm())
                {                               
                    @Html.SearchPanel(Model, (bv.model.Model.Core.FilterParams)ViewBag.Filter,(bv.model.Model.Core.IObject)ViewBag.InitObject)                  
                    <input type="button" value="@Translator.GetMessageString("Search")" class="spSearchButton" id="AltSearch"/>
                    <input type="button" value="@Translator.GetMessageString("Clear")" onclick="ClearSearch();" />     
                }
            </div>
            }
        </td>
        <td class="lfButtonTd">
            <input type="button" id="btHideListFormSearch" value="<<" onclick="onHideListFormSearchPanel();" class="lfButton" />
            <input type="button" id="btShowListFormSearch" value=">>" onclick="onShowListFormSearchPanel();" class="lfButton invisible" />
        </td>
        <td class="lfGridTd">     
        @using (var manager = bv.model.BLToolkit.DbManagerFactory.Factory.Create(eidss.model.Core.EidssUserContext.Instance))
        {            
            Html.BvFullGrid<VetCaseListItem.VetCaseListItemGridModel, VetCaseListItem.VetCaseListItemGridModelList>(
                    Session.SessionID, 
                    new VetCaseListItem.VetCaseListItemGridModelList(
                        AutoGridRoots.VetCaseList,  
                        AddressStringHelper.RearrangeAddressDisplayString(
                            (IObject)ViewBag.InitObject, 
                            Model.SelectListT(manager, (bv.model.Model.Core.FilterParams)ViewBag.Filter)
                            )),
                    sample: (IObject)ViewBag.InitObject
                    )                
                .Render();                                         
        }
        </td>
    </tr>
</table>
