<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

  <TextView
    android:id="@+id/label2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/OldPassword"
    />
  <EditText
    android:id="@+id/OldPassword"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/label2"
    android:password="true"
    />
  <TextView
    android:id="@+id/label3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/LoginPassword"
    android:layout_below="@id/OldPassword"
    />
  <EditText
    android:id="@+id/LoginPassword"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/label3"
    android:password="true"
    />
  <TextView
    android:id="@+id/label4"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/LoginPassword2"
    android:layout_below="@id/LoginPassword"
    />
  <EditText
    android:id="@+id/LoginPassword2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/label4"
    android:password="true"
    />  
  <Button
    android:id="@+id/CancelButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/Cancel"
    android:layout_below="@id/LoginPassword2"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="10dip"
    />
  <Button
    android:id="@+id/OkButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:text="@string/Ok"
    android:layout_toLeftOf="@id/CancelButton"
    android:layout_alignTop="@id/CancelButton"
    />

</RelativeLayout>
