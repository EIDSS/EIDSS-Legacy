<?xml version="1.0" encoding="utf-8" ?>
<object name="LoginInfo"
        connection="EidssConnectionString"
        generator="ObjectGenerator.xslt"
        xmlns="urn:schemas-bv:objectmodel">
  
  <storage>
    <get name="spLoginInfo_SelectDetail" type="detaillist" />
  </storage>

  <tables>
    <table name="LoginInfo">
      <!--TODO какие реквизиты здесь?-->
      <properties auditObject="daoUser" auditTable="tlbEmployee" permissionObject="User"/>
      <help win="UserGroupForm"/>      
      <grid>
        <item name="idfUserID" visible="false" key="true"/>
        <item name="strSiteID"/>
        <item name="strSiteType"/>
        <item name="strSiteName"/>        
        <item name="strAccountName"/>       
      </grid>
      <fields>
        <storage name="strPasswordDecrypted" type="string"/>
        <storage name="strConfirmPassword" type="string"/>
      </fields>      
      <lookups>
        <lookup name="Site" table="SiteLookup" source="idfsSite" target="idfsSite"/>
      </lookups>
      <storage>
        <post />
        <delete />
      </storage>
      <extenders>
        <creating>
          <scalar_extender target="idfUserID" class="GetNewIDExtender" />
          <scalar_extender target="idfsSite" class="GetSiteIDExtender" />
          <!--<value_extender target="idfsSite" value="EidssSiteContext.Instance.SiteID"/>-->
          <value_extender target="strPasswordDecrypted" value="null"/>
          <value_extender target="strConfirmPassword" value="null"/>
          <lambda_extender target="datPasswordSet" lambda="c => DateTime.Now" type="DateTime"/>
        </creating>
        <loading>
          <value_extender target="strPasswordDecrypted" value="null"/>
          <value_extender target="strConfirmPassword" value="null"/>          
        </loading>
        <posting>
          <custom_extender>
            <text>
              //если меняли пароль
              if (obj.strPasswordDecrypted != null) obj.binPassword = SecurityHelper.GetPasswordHash(obj.strPasswordDecrypted);
            </text>
          </custom_extender>
        </posting>
      </extenders>
      <handlers>
        <fieldhandler >
          <lambda_handler field="idfsSite" target="strSiteID" type="string" lambda='c => c.Site.strSiteID'/>
          <lambda_handler field="idfsSite" target="strSiteName" type="string" lambda='c => c.Site.strSiteName'/>
          <lambda_handler field="idfsSite" target="strSiteType" type="string" lambda='c => c.Site.strSiteType'/>
        </fieldhandler>
      </handlers>
      <validators>
        <post>
          <!--TODO разобраться с правильным отображением имен полей в сообщениях-->
          <custom_validator field="strConfirmPassword" method="CheckPasswords" required="true"/>
          <custom_validator field="strPasswordDecrypted" method="CheckPasswords" required="true"/>
          <required_validator target="strAccountName" field="strAccountName" />
          <required_validator target="idfsSite" field="idfsSite" />
          <custom_validator_manager  method="ValidateLogin"/>
        </post>
      </validators>
      <actions>
        <standard>
          <remove type="Create"/>
          <remove type="Ok"/>
        </standard>        
        <action name="LoginInfoOk" type="Close">
          <visual panel="Main" alignment="Right" visiblePredicate ="(c, a, p, b) => c!=null &amp;&amp; !c.ReadOnly">
            <regular caption="strOK_Id" tooltip="tooltipOK_Id" icon=""/>
          </visual>
        </action>
        <action name="Create" type="Create">
          <visual panel="Group" alignment="Right" enablePredicate="(c, p, b) => eidss.model.Core.EidssUserContext.User.HasPermission(bv.common.Core.PermissionHelper.InsertPermission(eidss.model.Enums.EIDSSPermissionObject.User))">
            <regular caption="strCreate_Id" tooltip="tooltipCreate_Id" icon="add"/>
          </visual>
          <run>
            <params>
              <param name="idfPerson" type="long"/>
              <param name="Site" type="SiteLookup"/>
            </params>
            <creating>
              <lambda_extender target="idfPerson" type="long" lambda="c => idfPerson"/>
              <lambda_extender target="strSiteID" type="string" lambda="c => Site.strSiteID"/>
              <lambda_extender target="strSiteName" type="string" lambda="c => Site.strSiteName"/>
              <lambda_extender target="strSiteType" type="string" lambda="c => Site.strSiteType"/>
            </creating>
          </run>
        </action>
      </actions>
    </table>
  </tables>

</object>