    <tr>
        <td class="xlarge firstLabel">
            @Html.LabelFor(m => m.strFirstName)
        </td>
        <td>
            @Html.BvEditbox(Model, m => m.strFirstName, true)                   
        </td>                            
    </tr>
    <tr>
        <td class="firstLabel">
            @Html.LabelFor(m => m.strSecondName)
        </td>
