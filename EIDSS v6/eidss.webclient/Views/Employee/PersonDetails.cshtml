    </tr>
    <tr>
        <td class="firstLabel">
            @Html.LabelFor(m => m.idfsStaffPosition)
        </td>
        <td>
            @Html.BvCombobox(Model, m => m.StaffPosition)              
        </td>
    </tr>     
    <tr>
        <td class="firstLabel">
            @Html.LabelFor(m => m.strContactPhone)
